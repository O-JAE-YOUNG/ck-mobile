<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_weight="10">

        <TextView
            android:id="@+id/cart_tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상호명"
            android:textAppearance="?android:attr/textAppearanceSmall" />
   <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
            
        <Button
            android:id="@+id/cart_btn_insert"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_insert" 
            />

            
    </LinearLayout>
   
    
    
    
     <ListView
          android:id="@+id/cart_listview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            android:layout_weight="60" >
      </ListView>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="30"
          android:orientation="vertical" >

        <TextView
            android:id="@+id/cart_tv_order_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="최소주문 금액 : 15,000원 이상" />

        <TextView
            android:id="@+id/cart_tv_order_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="합계  : 114,000원"
              android:layout_gravity="right"
            android:textColor="@color/red"
            android:textAppearance="?android:attr/textAppearanceMedium" />
          <Button
            android:id="@+id/cart_btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_order" 
            />

    </LinearLayout>

     

</LinearLayout>

<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--
         As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions.
    -->
<LinearLayout 
    android:layout_width="match_parent"
        android:layout_height="match_parent" 
         android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loc" />

        <TextView
            android:id="@+id/addrMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/addr" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addrOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:drawableLeft="@drawable/button_location"
            android:padding="5dp"
            android:text="다른배송지"
            android:textColor="@color/white" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
    <!--
         android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         The drawer is given a fixed width in dp and extends the full height of
         the container. A solid background is used for contrast
         with the content view.
    -->

    <LinearLayout
        android:id="@+id/drawer_linear"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:weightSum="14"
     >

     

        <TextView
            android:id="@+id/drawer_myorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 주문내역"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/drawer_adduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입 / 로그인"
            android:layout_weight="1"
             android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
   

        <TextView
            android:id="@+id/drawer_food_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
 <TextView
            android:id="@+id/drawer_food_chicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="치킨"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
  <TextView
            android:id="@+id/drawer_food_pig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="족발/보쌈"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
   <TextView
            android:id="@+id/drawer_food_korea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한식/분식"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
            android:id="@+id/drawer_food_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="야식"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
     <TextView
            android:id="@+id/drawer_food_japan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일식/돈까스"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
      <TextView
            android:id="@+id/drawer_food_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도시락/죽"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
       <TextView
            android:id="@+id/drawer_food_exten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
   
       
        <TextView
            android:id="@+id/drawer_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고객센터"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/drawer_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이벤트" 
            android:layout_weight="1"
             android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
            android:id="@+id/drawer_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정"
             android:layout_weight="1"
              android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    

    </LinearLayout>

